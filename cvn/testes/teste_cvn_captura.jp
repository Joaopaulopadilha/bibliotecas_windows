importar cvn

# Captura tela inteira
tela = cvn.capturar_tela()
cvn.exibir("screenshot", tela)
cvn.esperar(0)
cvn.salvar(tela, "screenshot.png")

# Captura região específica
regiao = cvn.capturar_regiao(100, 100, 400, 300)
cvn.salvar(regiao, "regiao.png")

# Captura janela pelo título
janela = cvn.capturar_janela("Bloco de Notas")
cvn.salvar(janela, "notepad.png")
